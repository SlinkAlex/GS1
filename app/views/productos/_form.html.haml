= form_for @producto do |f|
  - if @producto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@producto.errors.count, "error")} prohibited this producto from being saved:"
      %ul
        - @producto.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gtin
    = f.text_field :gtin
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :marca
    = f.text_area :marca
  .field
    = f.label :gpc
    = f.number_field :gpc
  .field
    = f.label :id_estatus
    = f.number_field :id_estatus
  .field
    = f.label :codigo_prod
    = f.number_field :codigo_prod
  .field
    = f.label :fecha_creacion
    = f.datetime_select :fecha_creacion
  .field
    = f.label :id_tipo_gtin
    = f.number_field :id_tipo_gtin
  .actions
    = f.submit 'Save'
