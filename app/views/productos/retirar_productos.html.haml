%section.contexto
    %label.contexto Productos > Retirar Productos
    %hr.contexto{:size => "1"}

%section#areaTrabajo.areaTrabajo
    %p#notice= notice
    =form_tag "/empresas/#{@prefijo}/productos/update_multiple", :method => "put", :id => "formulario_retirar_productos" do
        
        %table.margen_inferior{:border => 1}
            %tr
                %td
                    Retiro Masivo
                %td
                    SubEstatus
                %td
                    Motivo Retiro
            %tr
                %td
                    =check_box_tag "retiro_masivo_productos"
                %td
                    =select_tag("sub_estatus", options_from_collection_for_select(SubEstatus.all, "id", "descripcion"))
                %td
                    =select_tag("motivo_retiro", options_from_collection_for_select(MotivoRetiro.all, "id", "descripcion"))
        %table#data_table_retirar_productos.display{:"data-source" => "/productos.json?retirar=true&prefijo=#{@prefijo}"}
            %thead
                %tr
                    %th
                    %th Empresa
                    %th Tipo GTIN    
                    %th GTIN
                    %th Descripción
                    %th Marca
                    %th GPC
                    %th Estatus
                    %th Código Prod
                    %th Fecha Creación
                    %th SubEstatus
                    %th Motivo Ret
                   
            %tbody
            %tfoot
                =render 'footer_retirar_productos'
        
        %br/
        %br/
        #datos_productos_retirar_productos
        =hidden_field_tag "retirar"
        =submit_tag "retirar"
        
