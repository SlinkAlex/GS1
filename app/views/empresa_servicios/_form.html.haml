%section.contexto
  %label.contexto 
    
  %hr.contexto{:size => "1"}

  %section.formulario
    = form_for @empresa_servicio do |f|
      - if @empresa_servicio.errors.any?
        #error_explanation
          %h2= "#{pluralize(@empresa_servicio.errors.count, "error")} prohibited this servicio from being saved:"
          %ul
            - @empresa_servicio.errors.full_messages.each do |msg|
              %li= msg
      %table
        =fields_for @servicio do |servicio|
          %tr
            %td
              Nombre
            %td
              =servicio.text_field :nombre
        %tr
          %td
            Fecha Contratación
          %td
            =f.text_field :fecha_contratacion
        %tr
          %td
            Fecha Culminación
          %td
            =f.text_field :fecha_finalizacion
        %tr
          %td
            Nombre Contacto
          %td
            =f.text_field :nombre_contacto
        %tr
          %td
            Cargo Contacto
          %td
            =f.text_field :cargo_contacto 
        %tr
          %td
            Teléfono
          %td
            =f.text_field :telefono
        %tr
          %td
            Correo
          %td
            =f.text_field :email
        
        =hidden_field_tag "empresa_servicio[prefijo]", "#{params[:empresa_id]}"
     
      .actions
        = f.submit 'Guardar'
