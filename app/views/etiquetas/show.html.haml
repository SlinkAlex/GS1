%section.contexto
  %label.contexto 
    =@navegabilidad
  %hr.contexto{:size => "1"}

  %section.formulario
  %p#notice= notice

  %table
    %tr
      %td
        Dirección de Correspondencia
      %td
        =select_tag "tipo_correspondencia_etiqueta",  "<option value='ean'>Codifificación GS1</option><option value='edi'>Comercio Electrónico Y Sincronet</option>".html_safe

  
  %br
  %br
  %table

    %tr
      %td
        Contacto
      %td.etiqueta_nombre_contacto
        =@empresa.rep_ean
    %tr
      %td
        Cargo
      %td.etiqueta_cargo
        =@empresa.rep_ean_cargo
    %tr
      %td
        Teléfono
      %td.etiqueta_telefono
        =@empresa.telefono1_ean
    %tr
      %td
        Dirección
      %td.etiqueta_direccion
        =@empresa.try(:direccion_ean)
    %tr
      %td
        Estado
      %td.etiqueta_estado 
        =@estado_ean.try(:nombre)
    %tr
      %td
        Ciudad
      %td.etiqueta_ciudad
        =@ciudad_ean.try(:nombre)
    %tr
      %td
        Municipio
      %td.etiqueta_municipio
      
        =@municipio_ean.try(:nombre)
    %tr
      %td
        Parroquia
      %td.etiqueta_parroquia
        
        =@empresa.try(:parroquia_ean)
    %tr
      %td
        Cod. Postal
      %td.etiqueta_cod_postal
        =@empresa.try(:cod_postal_ean)
    %tr
      %td
        Pto. Referencia
      %td.etiqueta_punto_ref
        =@empresa.try(:punto_ref_ean)
  
  
  %br
  %br
  %a.ui-state-default.ui-corner-all.etiqueta_regresar_empresas{:href => "/empresas", :title => "Regresar"}
    %span.ui-icon.ui-icon-arrowreturnthick-1-w
    Regresar

  - if UsuariosAlcance.verificar_alcance(session[:perfil], 'Modificar Etiqueta')

    %a.ui-state-default.ui-corner-all.etiqueta_regresar_empresas_editar{:href => "#{edit_empresa_etiqueta_path(params[:empresa_id], params[:empresa_id])}", :title => "Editar datos de la etiqueta"}
      %span.ui-icon.ui-icon.ui-icon-extlink
      Editar
  
  %a.ui-state-default.ui-corner-all.etiqueta_regresar_empresas_exportar{:href => "/empresas/#{params[:empresa_id]}/etiquetas/#{params[:empresa_id]}.pdf", :title => "Exportar etiqueta formato PDF", :target => "_blank"}
    %span.ui-icon.ui-icon.ui-icon-extlink
    Exportar PDF

  