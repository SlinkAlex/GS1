%section.contexto
    %label.contexto Listado General de Empresas por Clasificación
    %hr.contexto{:size => "1"}
%section#areaTrabajo.areaTrabajo
    %p#notice= notice
    - if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Exportar Empresa')
        =render '/reportes/exportar_empresas'
    %br

    %table#data_table_reporte_empresas.display{:"data-source" => "/reportes.json?reporte_empresa=true"}
        %thead
            %tr
                %th Prefijo
                %th Nombre Empresa
                %th Fecha Activación
                %th Ciudad
                %th RIF
                %th Estatus
                %th Sub Estatus
                %th Clasificacion
                %th Detalle
                %th Productos
                %th Servicios
                %th GLN
                %th Etiquetas
               
               
        %tbody
        %tfoot
            =render '/empresas/footer_reporte_empresas'
    
