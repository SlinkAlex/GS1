!!!
%html
	%head
		%title GS1 Venezuela - Administrativo
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		%div.banner
			=image_tag 'GS1-Header-1.png', :class => "logo-izq"
			=image_tag 'GS1-Header-3.png', :class => "logo-der"

		%section#identificador.identificador{:onclick => "displayDetallePerfil(event)"}
			
			%br
			%label.usuario
				=session[:usuario]
			%br
			%label.rol
				=session[:perfil]
			%br
			%label.rol
				=session[:gerencia]
			%br
			%label.rol
				=session[:cargo]

			%br
			%label.session
				=link_to 'Cerrar Sesión', logout_path, :class => "enlace_session", :title => "Cierra sesión"

		%section#menu.menu	
			
			-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Empresas Activas') 

				%a.opcion{:href => "/empresas", :title => "Empresas Activas", :class => "ui-state-default ui-corner-all botones_menu"}
					%span.ui-icon.ui-icon-home
					&nbsp;Empresas Activas


					

			-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Activar Empresa') 
				
				%a.opcion{:href => "/empresa_registradas", :title => "Opción para ACTIVAR las nuevas empresas", :class => "ui-state-default ui-corner-all botones_menu"}
					%span.ui-icon.ui-icon-circle-check
					&nbsp;Activar / No Validada

			
			-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Nuevas Empresas') 

				%a.opcion{:href => "/empresa_registradas", :title => "Listado de Nuevas Empresas", :class => "ui-state-default ui-corner-all botones_menu"}
					%span.ui-icon.ui-icon-document
					&nbsp;Empresas Nuevas

			-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Registrar Empresa') 

				%a.opcion{:href => "/empresa_registradas/new", :title => "Opción para Registrar Empresa", :class => "ui-state-default ui-corner-all botones_menu"}
					%span.ui-icon.ui-icon-circle-plus
					&nbsp;Registrar Empresa

			-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Activar Solvencia') 
 		
				%a.opcion{:href => "/empresa_registradas?activar_solvencia=true", :title => "Listado de Nuevas Empresas", :class => "ui-state-default ui-corner-all botones_menu"}
					%span.ui-icon.ui-icon-print
					&nbsp;Solvencias




			- if params[:controller] == 'empresas'

				
				- if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia],'Retirar Empresa')
					%a.opcion{:href => "/empresas?retirar=true", :title => "Opción para retirar  Empresa", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-circle-minus
						&nbsp;Retirar Empresa

				-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Empresas Retiradas') 
					%a.opcion{:href => "/empresas?retiradas=true", :title => "Opción para Listar Empresas Retiradas", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-folder-collapsed
						&nbsp;Empresas Retiradas

				- if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia],'Eliminar Empresa')
					%a.opcion{:href => "/empresas?eliminar=true", :title => "Opción para Eliminar Empresa", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-circle-close
						&nbsp;Eliminar Empresa

				-if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Empresas Eliminadas') 
					%a.opcion{:href => "/empresas?eliminadas=true", :title => "Opción para Listar Empresas ELiminadas", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-trash
						&nbsp;Empresas Eliminadas

			- if params[:controller] =='productos'

				- if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Registrar Producto') and params[:empresa_retirada].nil? and params[:insolvente].nil?
					
					%a.opcion{:href => "/empresas/#{request.fullpath.split('/')[2]}/productos/new", :title => "Crear producto", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-circle-plus
						&nbsp;Crear Producto

				- if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Eliminar Producto') and params[:empresa_retirada].nil? and params[:insolvente].nil? 
					
					%a.opcion{:href => "/empresas/#{request.fullpath.split('/')[2]}/productos?eliminar=true", :title => "ELiminar productos", :class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-circle-close
						Eliminar Productos

			- if params[:controller] == 'glns'

				- if UsuariosAlcance.verificar_alcance(session[:perfil], session[:gerencia], 'Registrar GLN') 
					
					%a.opcion{:href => "#{new_empresa_gln_path}", :title => "Opción que permite crear GLN",:class => "ui-state-default ui-corner-all botones_menu"}
						%span.ui-icon.ui-icon-circle-plus
						Crear GLN


				
		= yield
		