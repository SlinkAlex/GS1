%section.contexto
  %label.contexto 
    
  %hr.contexto{:size => "1"}

  %section.formulario
    = form_for @servicio do |f|
      - if @servicio.errors.any?
        #error_explanation
          %h2= "#{pluralize(@servicio.errors.count, "error")}:"
          %ul
            - @servicio.errors.full_messages.each do |msg|
              %li= msg
      %table
        %tr
          %td
            Nombre
          %td
            =f.text_field :nombre

        =f.fields_for :empresa_servicio do |empresa_servicio|

          %tr
            %td
              Fecha Contratación
            %td
              =empresa_servicio.text_field :fecha_contratacion
          %tr
            %td
              Fecha Culminación
            %td
              =empresa_servicio.text_field :fecha_finalizacion
          %tr
            %td
              Nombre Contacto
            %td
              =empresa_servicio.text_field :nombre_contacto
          %tr
            %td
              Cargo Contacto
            %td
              =empresa_servicio.text_field :cargo_contacto 
          %tr
            %td
              Teléfono
            %td
              =empresa_servicio.text_field :telefono
          %tr
            %td
              Correo
            %td
              =empresa_servicio.text_field :email
        
          =empresa_servicio.hidden_field :prefijo, :value => "#{params[:empresa_id]}"
      =hidden_field_tag "prefijo", "#{params[:empresa_id]}"
     
      .actions
        = f.submit 'Guardar'

