%section.contexto
  %label.contexto 
    =@medida.new_record? ? ("Nueva Medida") : ("Editar clasificación > #{@medida.nombre}")  
  %hr.contexto{:size => "1"}

  %section.formulario
    = form_for @medida do |f|
      - if @medida.errors.any?
        #error_explanation
          %h2= "#{pluralize(@medida.errors.count, "error")} prohibited this medida from being saved:"
          %ul
            - @medida.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :nombre, "Nombre de la medida"
        %br
        = f.text_field :nombre
      .field
        = f.label :codigo, "Código"
        %br
        = f.text_field :codigo
      .field
      = f.label :abreviatura, "Abreviatura"
      %br
      = f.text_field :abreviatura
      .actions
        %button#submit.ui-state-default.ui-corner-all.guardar_producto{:type => "submit", :title => "Guardar Medida"}
          %span.ui-icon.ui-icon-disk
          Guardar Medida
        %a.ui-state-default.ui-corner-all.regresar_empresas{:href => "/medidas", :title => "Regresar listado general de Medidas"}
          %span.ui-icon.ui-icon.ui-icon-arrowreturnthick-1-w
          Regresar
