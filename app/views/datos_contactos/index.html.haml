%section.contexto
  %label.contexto Datos de Contacto
  %hr.contexto{:size => "1"}
%section#areaTrabajo.areaTrabajo
  %table#data_table_empresas_datos_contacto.dsiplay
    %thead
      %tr
        %th Prefijo
        %th Tipo Contacto
        %th Contacto
        %th Nombre Contacto
        %th Cargo
        %th 
        %th 
    %tbody
    - @datos_contactos.each do |datos_contacto|
      %tr
        %td= datos_contacto.prefijo        
        %td= datos_contacto.tipo
        %td= datos_contacto.contacto
        %td= datos_contacto.nombre_contacto
        %td= datos_contacto.cargo_contacto
        %td= link_to 'Editar', "/empresas/#{params[:empresa_id]}/datos_contactos/#{datos_contacto.id}/edit"
        %td= link_to 'Eliminar', "/empresas/#{params[:empresa_id]}/datos_contactos/#{datos_contacto.id}", :method => :delete, :data => { :confirm => 'Seguro ELIMINAR este contacto?'} 
              
  %br/
  %br/
  = link_to 'Nuevo Contacto', new_empresa_datos_contacto_path

