%section.contexto
    %label.contexto Empresas > Empresas Retiradas
    %hr.contexto{:size => "1"}
%section#areaTrabajo.areaTrabajo
    %p#notice= notice
    =form_tag update_multiple_empresas_path, :method => "put", :id => "formulario_retiradas" do
        %button#submit.ui-state-default.ui-corner-all.reactivar{:type => "submit"}
            %span.ui-icon.ui-icon-arrowrefresh-1-n
            Eliminar
        %table.margen_inferior{:border => 1}
            %tr
                %td
                    ELiminación Masiva
            %tr
                %td
                    =check_box_tag "eliminar_masivo"
       
        %table#data_table_empresas_retirar.display{:"data-source" => "/empresas.json?retiradas=true"}
            %thead
                %tr
                    %th Selección
                    %th Prefijo
                    %th Nombre Empresa
                    %th Fecha Inscripción
                    %th Dirección empresa
                    %th Estado
                    %th Ciudad
                    %th RIF
                    %th Estatus
                    %th Sub-estatus
                    %th Motivo Eliminación

            %tbody
            %tfoot
                =render 'footer_retirar'
        %br/
        %br/
        #datos_empresas_eliminar
        =hidden_field_tag "eliminar", "true"
        %button#submit.ui-state-default.ui-corner-all.reactivar{:type => "submit"}
            %span.ui-icon.ui-icon-arrowrefresh-1-n
            Eliminar
        
        
    