%section.contexto
    %label.contexto Empresas > Retirar Empresas
    %hr.contexto{:size => "1"}
%p#notice.ui-state-highlight.ui-corner-all
    -if (notice)
        =notice
        -notice = nil
%section#areaTrabajo.areaTrabajo
    =form_tag update_multiple_empresas_path, :method => "put", :id => "formulario_retirar_empresa" do
        %button#submit.ui-state-default.ui-corner-all.retirar{:type => "submit"}
            %span.ui-icon.ui-icon-circle-minus
            Retirar

        %table.margen_inferior{:border => 1}
            %tr
                %td
                    Retiro Masivo
                %td
                    Sub-Estatus
                %td
                    Motivo Retiro
            %tr
                %td
                    =check_box_tag "retiro_masivo"
                %td
                    =select_tag("sub_estatus", options_from_collection_for_select(SubEstatus.all, "id", "descripcion"))
                %td
                    =select_tag("motivo_retiro", options_from_collection_for_select(MotivoRetiro.all, "id", "descripcion"))
       
        %table#data_table_empresas_retirar.display{:"data-source" => "/empresas.json?retirar=true"}
            %thead
                %tr
                    %th Selección
                    %th Prefijo
                    %th Nombre Empresa
                    %th Fecha Inscripción
                    %th Dirección empresa
                    %th Estado
                    %th Ciudad
                    %th RIF
                    %th Estatus
                    %th Sub-estatus
                    %th Motivo Ret
                    %th Detalle Empresa

                    
                    
            %tbody
            %tfoot
                =render 'footer_retirar'
        %br/
        %br/
        #datos_empresas_retirar
        
        =hidden_field_tag "retiro", "true"
        %button#submit.ui-state-default.ui-corner-all.retirar{:type => "submit"}
            %span.ui-icon.ui-icon-circle-minus
            Retirar
        
    