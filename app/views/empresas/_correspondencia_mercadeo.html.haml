%br
  %label.contexto
    d. DIRECCION PARA ENVIO DE INVITACIONES A EVENTOS ESPECIALES (MERCADEO)
  %hr.contexto{:size => "1"}

    %table
      %tr
        %td
          NOMBRE PERSONA CONTACTO
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :persona_contacto_mercadeo)
          -else
            =(text_field_tag :persona_contacto_mercadeo, @correspondencia_mercadeo.try(:rep_tecnico))
      %tr
        %td
          CARGO
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :cargo_mercadeo) 
          -else
            =(text_field_tag :cargo_mercadeo, @correspondencia_mercadeo.try(:cargo_rep_tecnico))
      %tr
        %td
          Teléfono 1 (58)
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :telefono1_mercadeo) 
          -else
            =(text_field_tag :telefono1_mercadeo, @correspondencia_mercadeo.try(:telefono1))
      %tr
        %td
          Teléfono 2 (58)
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :telefono2_mercadeo)
          -else
            =(text_field_tag :telefono2_mercadeo, @correspondencia_mercadeo.try(:telefono2))
          
      %tr
        %td
          Teléfono 3 (58)
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :telefono3_mercadeo) 
          -else
            =(text_field_tag :telefono3_mercadeo, @correspondencia_mercadeo.try(:telefono3))
          
      %tr
        %td
          Fax (58)
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :fax_mercadeo) 
          -else
            =(text_field_tag :fax_mercadeo, @correspondencia_mercadeo.try(:fax))
          
      %tr
        %td
          E-mail
        %td
          -if (@empresa.new_record?) or (@correspondencia_mercadeo.nil?)
            =(text_field_tag :email_mercadeo, nil, {:class => "email"})
          -else
            =(text_field_tag :email_mercadeo, @correspondencia_mercadeo.try(:email), {:class => "email"})