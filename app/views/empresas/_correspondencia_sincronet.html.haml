%br
  %label.contexto
    b. DIRECCION PARA ENVIO DE CORRESPONDENCIA DE COMERCIO ELECTRONICO Y SINCRONET
  %hr.contexto{:size => "1"}

    %table
      %tr
        %td
          NOMBRE PERSONA CONTACTO
        %td
          -if (@empresa.new_record?) or (@correspondencia_sincronet.nil?)
            =text_field_tag :persona_contacto_sincronet
          -else
            =text_field_tag :persona_contacto_sincronet, @correspondencia_sincronet.try(:rep_tecnico)
      %tr
        %td
          CARGO
        %td
          -if (@empresa.new_record?) or (@correspondencia_sincronet.nil?)
            =text_field_tag :cargo_sincronet
          -else
            =text_field_tag :cargo_sincronet, @correspondencia_sincronet.try(:cargo_rep_tecnico)
      %tr
        %td
          -if (@empresa.new_record?) or (@correspondencia_sincronet.nil?)
            =select_tag(:edificio_sincronet, options_for_select(['Galpón', 'Edificio', 'Quinta']), { :prompt => "- Galpón/Edificio/Quinta -"})
          -else
            =select_tag(:edificio_sincronet, options_for_select(['Galpón', 'Edificio', 'Quinta'], @correspondencia_sincronet.try(:edificio)), { :prompt => "- Galpón/Edificio/Quinta -"})
          
        %td
          -if (@empresa.new_record?) or (@correspondencia_sincronet.nil?)
            =text_field_tag :detalle_edificio_sincronet
          -else
            =text_field_tag :detalle_edificio_sincronet, @correspondencia_sincronet.try(:detalle_edificio)
      / %tr
      /   %td
      /     =@empresa.new_record? ? (select_tag(:piso_sincronet, options_for_select(['Piso', 'Nº']), { :prompt => "- Piso/Nº -"})) : (select_tag(:piso_sincronet, options_for_select(['Piso', 'Nº'], @correspondencia_sincronet.piso), { :prompt => "- Piso/Nº -"})) 
          
      /   %td
      /     =@empresa.new_record? ? (text_field_tag :detalle_piso_sincronet) : (text_field_tag :detalle_piso_sincronet, @correspondencia_sincronet.detalle_piso)
      / %tr
      /   %td
      /     =@empresa.new_record? ? (select_tag(:oficina_sincronet, options_for_select(['Oficina', 'Apartamento']), { :prompt => "-Oficina/Apartamento-"})) : (select_tag(:oficina_sincronet, options_for_select(['Oficina', 'Apartamento'], @correspondencia_sincronet.oficina), { :prompt => "-Oficina/Apartamento-"}))
          
      /   %td
      /     =@empresa.new_record? ? (text_field_tag :detalle_oficina_sincronet) : (text_field_tag :detalle_oficina_sincronet, @correspondencia_sincronet.detalle_oficina) 
          
      / %tr
      /   %td
      /     =@empresa.new_record? ? (select_tag(:calle_sincronet, options_for_select(['Avenida', 'Calle']), { :prompt => "- Avenida/Calle -"})) : (select_tag(:calle_sincronet, options_for_select(['Avenida', 'Calle'], @correspondencia_sincronet.calle), { :prompt => "- Avenida/Calle -"}))
          
      /   %td
      /     =@empresa.new_record? ? (text_field_tag :detalle_calle_sincronet) : (text_field_tag :detalle_calle_sincronet, @correspondencia_sincronet.detalle_calle)
      / %tr
      /   %td
      /     =@empresa.new_record? ? ((select_tag(:urbanizacion_sincronet, options_for_select(['Urbanización', 'Barrio', 'Sector', 'Terraza']), { :prompt => "- Urb./Barrio/Sector/Terraza -"}))) : (select_tag(:urbanizacion_sincronet, options_for_select(['Urbanización', 'Barrio', 'Sector', 'Terraza'], @correspondencia_sincronet.urbanizacion), { :prompt => "- Urb./Barrio/Sector/Terraza -"}))
          
      /   %td
      /     =@empresa.new_record? ? (text_field_tag :detalle_urbanizacion_sincronet) : (text_field_tag :detalle_urbanizacion_sincronet, @correspondencia_sincronet.detalle_urbanizacion)
          
      / %tr
      /   %td
      /     ESTADO
